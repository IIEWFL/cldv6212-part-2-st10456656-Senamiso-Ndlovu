@model IEnumerable<ABC.Models.AuditLog>

<h2>Audit Logs</h2>

<div class="mb-3">
    <form asp-action="Export" method="post">
        <button type="submit" class="btn btn-primary">Export to Excel</button>
    </form>
    <a asp-action="DownloadCsv" class="btn btn-success">Download CSV</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Action</th>
            <th>Entity</th>
            <th>Id</th>
            <th>Name</th>
            <th>Timestamp</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var log in Model)
        {
            <tr>
                <td>@log.Action</td>
                <td>@log.Entity</td>
                <td>@log.Id</td>
                <td>@log.Name</td>
                <td>@log.Timestamp</td>
            </tr>
        }
    </tbody>
</table>
