@model ABC.Models.OrderViewModel

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this order?</h3>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>RowKey</dt>
        <dd>@Html.DisplayFor(model => model.RowKey)</dd>
        <dt>Customer Name</dt>
        <dd>@Html.DisplayFor(model => model.CustomerName)</dd>
        <dt>Product Name</dt>
        <dd>@Html.DisplayFor(model => model.ProductName)</dd>
        <dt>Quantity</dt>
        <dd>@Html.DisplayFor(model => model.Quantity)</dd>
        <dt>Order Date</dt>
        <dd>@Html.DisplayFor(model => model.OrderDate)</dd>
        <dt>Total Price</dt>
        <dd>@Html.DisplayFor(model => model.TotalPrice)</dd>
        <dt>Status</dt>
        <dd>@Html.DisplayFor(model => model.Status)</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="RowKey" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>