@model IEnumerable<ABC.Models.ProductViewModel>

@{
    ViewData["Title"] = "Index";
}

<h2>Products</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Description</th>
            <th>Image</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.ProductName)</td>
                <td>@Html.DisplayFor(modelItem => item.ProductPrice)</td>
                <td>@Html.DisplayFor(modelItem => item.ProductDescription)</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImageSasUrl))
                    {
                        <img src="@item.ImageSasUrl" alt="@item.ProductName" style="max-width: 100px;" />
                    }
                    else
                    {
                        <span>No Image</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.RowKey">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.RowKey">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.RowKey">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>