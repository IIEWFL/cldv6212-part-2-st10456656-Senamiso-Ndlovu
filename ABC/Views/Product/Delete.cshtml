@model ABC.Models.ProductViewModel

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this product?</h3>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Name</dt>
        <dd>@Html.DisplayFor(model => model.ProductName)</dd>
        <dt>Price</dt>
        <dd>@Html.DisplayFor(model => model.ProductPrice)</dd>
        <dt>Description</dt>
        <dd>@Html.DisplayFor(model => model.ProductDescription)</dd>
        <dt>Image</dt>
        <dd>
            @if (!string.IsNullOrEmpty(Model.ImageSasUrl))
            {
                <img src="@Model.ImageSasUrl" alt="@Model.ProductName" style="max-width: 200px;" />
            }
            else
            {
                <span>No Image</span>
            }
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="RowKey" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>